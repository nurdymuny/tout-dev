!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width,initial-scale=1"}
    %meta{:name => "format-detection", :content => "telephone=no"}

    -# Pull in the page title
    %title= @title

    -# Place favicon.ico and apple-touch-icon.png in the root directory: tout-dev/notes/touch-icons

    %link{:rel => "stylesheet", :href => "javascripts/mylibs/jquery.mobile-1.3.0/jquery.mobile-1.3.0.css"}
    %link{:rel => "stylesheet", :href => "stylesheets/screen.css"}
    %script{:src => "javascripts/mylibs/jquery-1.9.1.min.js"}
    %script{:src => "javascripts/mylibs/jquery.mobile-1.3.0/jquery.mobile-1.3.0.min.js"}
    = stylesheets_tag
    = javascripts_tag

  %body{:id => "#{@page_id}"}
    #main-content{:role => "main", "data-role" => "page"}
      %div{"data-role" => "header"}
        %h1 Middleman!

      %div{"data-role" => "content"}
        -# Page content gets rendered here
        = yield(:layout)

      %div{"data-role" => "footer", "data-position" => "fixed"}


