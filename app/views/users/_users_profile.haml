- @title = "user-profile"
.tabs-holder
  #tab-1.tab-content
    #state1.tab-001.active
      = partial :"partials/tout"
    #state2.tab-002
      %h2 1 day ago
      / massonry-content
      .massonry-content
        .massonry-holder
          -@touts.each_with_index do |f_tout, index|
            .block
              =link_to "", '#' do
                =image_tag f_tout.image.thumbnail.http_url,  :width => '98', :height => '133', :alt => 'image description'

  #tab-2.tab-content
    %ul.list-people.user{'data-role' => 'listview'}
      - @followers.each_with_index do |u_follower, index|
        %li
          .img-box
            =image_tag u_follower.avatar.small.http_url, :width => '41', :height => '41', :alt => 'image description'
          .link-holder
            =link_to 'http://64.207.178.146:9292/users-profile/' + u_follower.username, :class => 'follow-link' do
              Follow
              %span.mark +
          .text-holder
            %h2
              =link_to 'http://64.207.178.146:9292/users-profile/' + u_follower.username do
                =u_follower.username
            %p= u_follower.location
       
  #tab-3.tab-content
    /list-people
    %ul.list-people.user.add{'data-role' => 'listview'}
      - @following.each do |u_following|
        %li
          .img-box.mark
            =link_to 'http://64.207.178.146:9292/users-profile/' + u_following.username, '#' do
              =image_tag u_following.avatar.small.http_url, :width => '41' , :height => '41', :alt => 'image description'
          .link-holder
            =link_to 'http://64.207.178.146:9292/users-profile/' + u_following.username, :class => 'follow-link' do
              Follow
              %span.mark +
          .text-holder
            %h2
              =link_to 'http://64.207.178.146:9292/users-profile/' + u_following.username do
                =u_following.username
              %p= u_following.location

