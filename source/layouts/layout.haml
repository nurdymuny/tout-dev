%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}

    -# Pull in the page title
    %title= @title
    
    %meta{:name => "description", :content => ""}
    %meta{:name => "author", :content => ""}

    %meta{:name =>"viewport", :content => "width=device-width,initial-scale=1"}

    -# Place favicon.ico and apple-touch-icon.png in the root directory: tout-dev/notes/touch-icons

    %link{:rel => "stylesheet", :href => "http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.css"}

  %body{:id => "#{@page_id}"}
    #main-content{:role => "main", "data-role" => "page"}
      %div{"data-role" => "header"}
        %h1 Middleman!

      %div{"data-role" => "content"}
        -# Page content gets rendered here
        = yield
        %p Page content goes here.

      %div{"data-role" => "footer", "data-position" => "fixed"}

    -# JavaScript at the bottom for fast page loading

    -# scripts concatenated and minified
    %script{:defer => "defer", :src => "http://code.jquery.com/jquery-1.6.4.min.js"}
    %script{:defer => "defer", :src => "http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.js"}

